  <script type="text/javascript">
    function createRoom(){
      var d = new Date();
      window.location = "/room/" + d.getTime();
    }

    function detectEnterKey(event){
      if( event.keyCode == 13 ){
        customizeRoom();
      }
    }

    function customizeRoom(){
      var name = document.getElementById("customizedName").value;
        if ( name == "" ){
          createRoom();
        }else{
          window.location = "/room/" + encodeURIComponent(name); 
        }
    }
  </script>
